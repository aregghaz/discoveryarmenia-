{% extends 'DAMainBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="path_block">
        <div class="container">
            {% set slug = app.request.attributes.get('slug') %}
            <ul>
                <li class="link">
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                    <a href="{{ path('home_page',{'_locale':app.request.attributes.get('_locale')}) }}">
                        {{ 'home' | trans({}, 'messages') }}</a>
                </li>
                <li>
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                    <a >{{ object.title }}</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="page_banner_block" style="background: url('{{ media(object.bannerImage) }}') no-repeat;background-size: cover;background-position: center center;">
        <div class="container">
            <div class="content">
                <h1>{{ object.bannertitle }}</h1>
                <p>{{ object.bannerDescription }}</p>
            </div>
        </div>
    </div>

    <div class="armenia">
        <div class="container clear">

            {% for block in object.block %}
                <div class="armenia_block clear">
                    {% if block.image is null and  block.video is  null %}
                        <div class="info">
                            <div class="block_title">{{ block.title }}</div>
                            <div class="description">{{ block.description }}</div>
                        </div>
                    {% else %}
                        <div class="left_block info">
                            <div class="block_title">{{ block.title }}</div>
                            <div class="description">{{ block.description }}</div>
                        </div>
                        <div class="right_block">
                            {% if block.image is not null %}
                                <img src="{{ media(block.image) }}" alt="{{ block.image.alt }}">
                            {% elseif block.video is not null %}
                                {{ youtube(block.video) }}
                            {% endif %}
                        </div>
                    {% endif %}

                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/damain/js/transition.js') }}"></script>
{% endblock %}